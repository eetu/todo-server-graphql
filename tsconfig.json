{
  "compilerOptions": {
    "typeRoots": ["./node_modules/@types", "./src/@types"],
    "target": "es2017",
    "module": "commonjs",
    "allowJs": true,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "isolatedModules": false,
    "noEmit": false,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "strictNullChecks": true,
  "exclude": ["node_modules"],
  "include": ["src/**/*.ts"]
}
